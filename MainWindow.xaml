<Window x:Class="KoldunTrade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoldunTrade"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" FontFamily="Comic Sans MS" Icon="res/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TextBlock Background="#FFFFCC99" Grid.Row="0"></TextBlock>
        <TextBlock Background="#FFFFCC99" Grid.Row="2"></TextBlock>
        <TextBlock Text="Украшения" Grid.Row="0" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Image Source="res/logo.png" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>

        <Frame Name="MainFrame" Grid.Row="1"></Frame>
        
    </Grid>
</Window>
